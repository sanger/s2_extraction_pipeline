{
  "node": true,
  "browser": true,
  "esnext": true,
  "bitwise": true,
  "camelcase": true,
  "curly": true,
  "eqeqeq": true,
  "immed": true,
  "indent": 2,
  "latedef": true,
  "newcap": true,
  "noarg": true,
  "quotmark": "double",
  "regexp": true,
  "undef": true,
  "unused": true,
  "noempty": true,  // Prohipit use of empty blocks.
  "strict": true,
  "trailing": true,
  "smarttabs": false,

  "predef": [
    "define",
    "require",
    "$",
    "_"
  ]
}
